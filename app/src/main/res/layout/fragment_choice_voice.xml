<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChoiceVoiceFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음성 선택(개 허접함)"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <RadioGroup
        android:id="@+id/choiceVoiceRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <RadioButton
            android:id="@+id/noVoiceRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="무음"
            android:textAlignment="center"/>

        <RadioButton
            android:id="@+id/girl1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성 1" />

        <RadioButton
            android:id="@+id/girl2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="여성 2" />

        <RadioButton
            android:id="@+id/man1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남성 1" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>