<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fitness.SetEndActivity">

    <TextView
        android:id="@+id/SetEndRemainSetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="남은 Set : 4, 총 Set : 5"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SetEndRemainMainTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="남은 휴식 시간"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@id/SetEndRemainSetTextView"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toTopOf="@id/SetEndProgressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.cloud.progressbar.CircleProgressBar
        android:id="@+id/SetEndProgressbar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:gravity="center"
        android:text="20초"
        android:textColor="#80cc33"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:progressBackColor="#e0e0e0"
        app:progressColor="#80cc33"
        app:maxProgress="30"
        app:progress="20"
        app:progressWidth="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>